<a class="uk-button uk-button-default uk-position-top-center uk-position-relative uk-background-primary" id="newPostBtn" href="/post">+ New Post</a>
<div class="uk-container uk-margin uk-container-medium uk-background-primary">
{{#each posts as |post| }}
    <div class="uk-card uk-margin uk-margin-top uk-margin-bottom uk-card-body uk-background-secondary">
        {{post.user.username}}
        <div class="post-header">
            <h2>
            <a href="/post/{{post.id}}">{{post.title}}</a>
            </h2>
        </div>
        <div class="content">
            <p>
            {{post.content}}
            </p>
        </div>
        <p>Posted on {{format_date post.date_created}}</p>
    </div>
{{/each}}
</div>